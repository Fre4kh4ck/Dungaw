FROM oven/bun:latest

# Set working directory
WORKDIR /app

# Copy package.json and bun.lockb (if exists)
COPY api/package.json api/bun.lockb* ./

# Install dependencies
RUN bun install

# Copy the rest of the API code
COPY api/ ./

# Expose the port
EXPOSE 4435

# Start the server
CMD ["bun", "run", "start"]
